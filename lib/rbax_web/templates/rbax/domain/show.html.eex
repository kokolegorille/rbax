<h1><%= @domain.name %></h1>

<%= if @domain.context do %>
  <ul>
    <li><%= @domain.context %></li>
  </ul>
<% end %>

<%= if length(@domain.resources) > 0 do %>
  <h3>Resources</h3>
  <ul>
  <%= for resource <- @domain.resources do %>
    <li><%= resource.name %></li>
  <% end %>  
  </ul>
<% end %>

<div>
  <%= link gettext("Index"), to: Routes.domain_path(@conn, :index) %> | 
  <%= link gettext("Edit"), to: Routes.domain_path(@conn, :edit, @domain) %> | 
  <%= 
    link gettext("Delete"), 
      to: Routes.domain_path(@conn, :delete, @domain), 
      method: :delete, 
      data: [confirm: gettext("Are you sure?")]
  %>  
</div>