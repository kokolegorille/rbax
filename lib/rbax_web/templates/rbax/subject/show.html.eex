<h1><%= @subject.name %></h1>

<div>
  <%= link gettext("Index"), to: Routes.subject_path(@conn, :index) %> | 
  <%= link gettext("Edit"), to: Routes.subject_path(@conn, :edit, @subject) %> | 
  <%= 
    link gettext("Delete"), 
      to: Routes.subject_path(@conn, :delete, @subject), 
      method: :delete, 
      data: [confirm: gettext("Are you sure?")]
  %>  
</div>